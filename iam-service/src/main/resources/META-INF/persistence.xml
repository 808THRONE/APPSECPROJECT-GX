<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="iam-pu" transaction-type="JTA">
        <!-- Use PostgreSQL datasource (configured in WildFly) -->
        <jta-data-source>java:jboss/datasources/SecureGateDS</jta-data-source>
        
        <properties>
            <!-- Auto-create/update schema (reverted to update after successful reset) -->
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
            
            
            <!-- SQL logging (set to false in production) -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            
            <!-- Connection pool settings -->
            <property name="hibernate.connection.CharSet" value="utf8"/>
            <property name="hibernate.connection.characterEncoding" value="utf8"/>
            <property name="hibernate.connection.useUnicode" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
