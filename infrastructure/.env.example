# SecureGate IAM Portal - Environment Configuration
# Copy this file to .env and modify values for your deployment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_PASSWORD=securegate_production_password_change_me
DB_HOST=postgres
DB_PORT=5432
DB_NAME=securegate_iam
DB_USER=securegate

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=redis_production_password_change_me
REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================
# MINIO OBJECT STORAGE
# =============================================================================
MINIO_USER=minio_admin
MINIO_PASSWORD=minio_production_password_change_me

# =============================================================================
# JWT / AUTHENTICATION
# =============================================================================
# CRITICAL: Change this in production! Must be at least 256 bits (32 characters)
JWT_SECRET_KEY=SecureGate_Production_Secret_Key_Must_Be_Changed_In_Prod_256bit!
JWT_ISSUER=https://iam.securegate.io
JWT_AUDIENCE=securegate-api
JWT_EXPIRATION_SECONDS=900

# =============================================================================
# STEGANOGRAPHY MODULE
# =============================================================================
STEGO_ENABLED=true
# Base64 encoded 32-byte key for ChaCha20-Poly1305
STEGO_ENCRYPTION_KEY=MDEyMzQ1Njc4OTAxMjM0NTY3ODkwMTIzNDU2Nzg5MDE=

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VITE_API_URL=http://localhost:8080/api-gateway/api/v1
VITE_IAM_URL=http://localhost:8080/iam-service/api
VITE_STEGO_URL=http://localhost:8084/stego-module/api
VITE_STEGO_ENABLED=true
VITE_OAUTH_CLIENT_ID=securegate-frontend
VITE_ENV=production

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
